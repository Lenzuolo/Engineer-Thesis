{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "quotes": ["error", "single"],
        "class-methods-use-this": "off",
        "no-param-reassign": "off",
        "no-console": "warn",
        "camelcase": "off",
        "no-unused-vars": "warn",
        "sort-imports": "off",
        "import/prefer-default-export": "off"
    }
}
